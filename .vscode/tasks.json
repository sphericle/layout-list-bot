    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill node",
            "type": "shell",
            "command": "pkill -f 'node ./bot.js'",
            "problemMatcher": []
        },
        {
            "label": "run node",
            "type": "shell",
            "command": "npm start",
            "presentation": {
                "close": true,
                "panel": "shared"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
}
